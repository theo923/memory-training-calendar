{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "__test__/setupTests.js",
    "pages/shoppingCart.tsx",
    "pages/_app.js",
    "pages/tracking/[username]/[order_id].js",
    "pages/api/security/checkAdminStatus.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
